# Ambiente
NODE_ENV=development

# Porta do servidor
PORT=3000

# MongoDB - LOCAL (para desenvolvimento)
MONGODB_URI=mongodb://localhost:27017/backend-db

# MongoDB - PRODUÇÃO (MongoDB Atlas - use no Vercel)
# MONGODB_URI=mongodb+srv://<usuario>:<senha>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# JWT Secret (use uma chave forte em produção!)
JWT_SECRET=your-super-secret-jwt-key-here-min-32-chars

# JWT Expiração
JWT_EXPIRES_IN=7d

# ========================================
# Exemplo completo para produção no Vercel:
# ========================================
# MONGODB_URI=mongodb+srv://admin:SenhaForte123@cluster0.abc123.mongodb.net/backend-prod?retryWrites=true&w=majority
# JWT_SECRET=chave-jwt-super-secreta-producao-2025-min-32-caracteres
# JWT_EXPIRES_IN=7d
# NODE_ENV=production
# PORT=3000